@model List<Contact>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h1>Lista kontaktów:</h1>
<div>
    @if (Model.Count > 0)
    {


        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(i => Model[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(i => Model[0].Email)
                </th>
                <th>
                    @Html.DisplayNameFor(i => Model[0].Priority)
                </th>
                <th>
                    Akcje
                </th>
            </tr>
            @foreach (var item in @Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Email
                    </td>
                    <td>
                        @item.Priority.GetDisplayName()
                    </td>
                    <td>
                        <a class="btn btn-primary"
                        asp-action="Update"
                        asp-controller="Contact"
                        asp-route-id=@item.Id>Edytuj</a>
                        <a class="btn btn-primary"
                        asp-action="Details"
                        asp-controller="Contact"
                        asp-route-id=@item.Id>Szczegóły</a>
                        <a class="btn btn-primary"
                        asp-action="Delete"
                        asp-controller="Contact"
                        asp-route-id=@item.Id>Usuń</a>
                    </td>
                </tr>
            }
        </table>
    }

</div>
