@{
}
<h1>Edycja kontaktu</h1>
<form asp-controller="Contact" asp-action="Update" method="post">
    @*<div asp-validation-summary="All"></div>*@
    <div class="mb-3">
        <label asp-for="Name">Imię i nazwisko</label>
        <input class="form-control" asp-for="Name" />
        <span class="tet-danger" asp-validation-for="Name"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Email">E-mail</label>
        <input class="form-control" asp-for="Email" />
        <span class="tet-danger" asp-validation-for="Email"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Phone">Numer telefonu</label>
        <input class="form-control" asp-for="Phone" />
        <span class="tet-danger" asp-validation-for="Phone"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Birth">Data urodzenia</label>
        <input class="form-control" asp-for="Birth" />
        <span class="tet-danger" asp-validation-for="Birth"></span>
    </div>
    <div>
        <label asp-for="Priority">Kategoria</label>
        <div>
            <span asp-validation-for="Priority" class="text-danger"></span>
        </div>
        <select class="form-control" asp-for="Priority" asp-items="@Html.GetEnumSelectList<Priority>()"></select><br />
    </div>

    <button type="submit">Zapisz</button>
</form>