}
<h1>Dodawanie kontaktu</h1>
<form asp-action="Create" asp-controller="Contact" method="post">
    <div class="mb-3">
    <label asp-for="Name">Imię i nazwisko</label>
    <input class="form-control" asp-for="Name" />
    <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Email">Email</label>
        <input class="form-control" asp-for="Email" />
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Birth">Data urodzenia</label>
        <input class="form-control" asp-for="Birth" />
        <span class="text-danger" asp-validation-for="Birth"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Phone">Numer telefonu</label>
        <input class="form-control" asp-for="Phone" />
        <span class="text-danger" asp-validation-for="Phone"></span>
    </div>
   
    <div>
        <label asp-for="Priority"></label>
        <div>
            <span asp-validation-for="Priority" class="text-danger"></span>
        </div>
        <select class="form-control" asp-for="Priority" asp-items="@Html.GetEnumSelectList<Priority>()"></select><br />
    </div>
    

  @*  <input asp-for="Name" /> <br />
    <input asp-for="Email" /> <br />
    <input asp-for="Birth" /> <br />
    <input asp-for="Phone" /> <br />*@
    <div class="mb-3">
    <button class="btn btn-primary" type="submit">Utwórz</button>
    </div>

</form>