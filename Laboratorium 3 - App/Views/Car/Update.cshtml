@model TModel

@{
    Layout = null;
}

<h1>Edytowanie samochodu</h1>
<form asp-controller="Contact" asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Model">Model</label>
        <input class="form-control" asp-for="Model" />
        <span class="text-danger" asp-validation-for="Model"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Producer">Producent</label>
        <input class="form-control" asp-for="Producer" />
        <span class="text-danger" asp-validation-for="Producer"></span>
    </div>

    <div class="mb-3">
        <label asp-for="EngineCapacity">Pojemność silnika</label>
        <input class="form-control" asp-for="EngineCapacity" />
        <span class="text-danger" asp-validation-for="EngineCapacity"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Power">Moc</label>
        <input class="form-control" asp-for="Power" />
        <span class="text-danger" asp-validation-for="Power"></span>
    </div>
    
    <div class="mb-3">
        <label asp-for="EngineType">Rodzaj silnika</label>
        <input class="form-control" asp-for="EngineType" />
        <span class="text-danger" asp-validation-for="EngineType"></span>
    </div>
    
    <div class="mb-3">
        <label asp-for="LicencePlate">Numer rejestracyjny</label>
        <input class="form-control" asp-for="LicencePlate" />
        <span class="text-danger" asp-validation-for="LicencePlate"></span>
    </div>
    
    <div class="mb-3">
            <label asp-for="Owner">Właścicel</label>
            <input class="form-control" asp-for="Owner" />
            <span class="text-danger" asp-validation-for="Owner"></span>
        </div>
    
    <div class="mb-3">
        <button class="btn btn-primary" type="submit">Dodaj</button>
    </div>
</form> 